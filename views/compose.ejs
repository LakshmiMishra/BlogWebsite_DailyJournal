<%- include("partials/header");-%>

        <!-- Page Header-->
        <header class="masthead" style="background-image: url('assets/img/home-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="page-heading">
                            <h1>Compose Your Post</h1>

                        </div>
                    </div>
                </div>
            </div>
        </header>
        <main class="mb-4">
           <div class="container px-4 px-lg-5">
               <div class="row gx-4 gx-lg-5 justify-content-center">
                   <div class="col-md-10 col-lg-8 col-xl-7">
                       <p>Publish your Articles</p>
                       <div class="my-5">

                           <form id="" action="/compose" method="post">
                               <div class="form-floating">
                                   <input class="form-control" name="postTitle" type="text" placeholder="Enter title..." />
                                   <label for="name">Title</label>
                               </div>
                               <div class="form-floating">
                                   <textarea class="form-control" name="postContent" placeholder="Enter your content here..." style="height: 12rem"></textarea>
                                   <label for="message">Compose</label>
                               </div>
                               <br />
                               <!-- Submit success message-->

                               <!-- has successfully submitted-->
                               <div class="d-none" id="submitSuccessMessage">
                                   <div class="text-center mb-3">
                                       <div class="fw-bolder">Form submission successful!</div></div>
                               </div>

                               <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">Publish</button>
                           </form>
                       </div>
                   </div>
               </div>
           </div>
       </main>
<%- include("partials/footer");-%>
